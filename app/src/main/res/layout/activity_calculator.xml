<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bhuvanesh.myapps.Calculator"
    android:orientation="vertical"
    android:background="#c2c5b3"
    android:id="@+id/mainSkyBlueBox">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#FF6D716D">

        <EditText
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="DEL"
            android:background="#0c0d0c"
            android:textColor="#fdeef6f5" />
    </LinearLayout>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#58e2d4"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#eb556438">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sin"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cos"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tan"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="!"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#eb556438">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ln"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="log"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="e"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="^"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5" />
        </LinearLayout>
    </LinearLayout>
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#eb556438"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#eb556438">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("
                android:background="#FF6D716D"
                android:textColor="#fdeef6f5"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"
                android:background="#FF6D716D"
                android:textColor="#fdeef6f5"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:background="#FF6D716D"
                android:textColor="#fdeef6f5"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:background="#FF6D716D"
                android:textColor="#fdeef6f5"
                android:textSize="20sp" />
        </LinearLayout>
        <!-- - - - - - - - - - - - - - - - - - Row 2  - - - - - - - - - - - - - - - - - - - - -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#eb556438">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:background="#FF6D716D"
                android:textColor="#fdeef6f5"
                android:textSize="30sp" />
        </LinearLayout>
        <!-- - - - - - - - - - - - - - - - - - Row 3 and 4  - - - - - - - - - - - - - - - - - - - - -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#eb556438">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#eb556438"
                android:layout_weight="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#eb556438">
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:background="#0c0d0c"
                            android:textColor="#fdeef6f5"
                            android:textSize="20sp" />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:background="#0c0d0c"
                            android:textColor="#fdeef6f5"
                            android:textSize="20sp" />
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:background="#0c0d0c"
                            android:textColor="#fdeef6f5"
                            android:textSize="20sp" />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#eb556438">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:background="#0c0d0c"
                        android:textColor="#fdeef6f5"
                        android:textSize="20sp" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:background="#0c0d0c"
                        android:textColor="#fdeef6f5"
                        android:textSize="20sp" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:background="#0c0d0c"
                        android:textColor="#fdeef6f5"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:layout_gravity="right"
                android:textColor="#fdeef6f5"
                android:background="#FF6D716D"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#eb556438">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5"
                android:textSize="20sp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="="
                android:background="#0c0d0c"
                android:textColor="#fdeef6f5"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
