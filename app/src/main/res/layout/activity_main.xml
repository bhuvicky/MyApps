<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/lvDrawerListLeft"
        android:background="#20b2aa"
        android:divider="@null"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left">
    </ListView>

    <ListView
        android:entries="@array/acions"
        android:id="@+id/lvDrawerListRight"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="right">
    </ListView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATOR"
        android:id="@+id/btncalc"
        android:onClick="openNewActivity"
        android:layout_below="@+id/btnUserRegForm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BENCHMARK"
        android:id="@+id/btnbench"
        android:onClick="openNewActivity"
        android:layout_below="@+id/btnUserRegForm"
        android:layout_toRightOf="@+id/btnUserRegForm"
        android:layout_toEndOf="@+id/btnUserRegForm" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GREET USER"
        android:id="@+id/btnGreetUser"
        android:onClick="openNewActivity"
        android:layout_below="@+id/btncalc"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USER REG FORM"
        android:id="@+id/btnUserRegForm"
        android:layout_centerHorizontal="true"
        android:onClick="openNewActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FelightNews"
        android:id="@+id/btnFelightNews"
        android:layout_below="@+id/btnGreetUser"
        android:layout_toLeftOf="@+id/btnGreetUser"
        android:layout_toStartOf="@+id/btnGreetUser"
        android:onClick="openNewActivity"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GoogleNews"
        android:id="@+id/btnGoogleNews"
        android:layout_below="@+id/btnGreetUser"
        android:layout_toRightOf="@+id/btnGreetUser"
        android:layout_toEndOf="@+id/btnGreetUser"
        android:onClick="openNewActivity"/>

</RelativeLayout>
    </android.support.v4.widget.DrawerLayout>